<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_survey_game_session_form" model="ir.ui.view">
    <field name="name">survey.game.session.form</field>
    <field name="model">survey.game.session</field>
    <field name="arch" type="xml">
      <form string="Game Session">
        <header>
            <button name="action_start_game"
                    type="object"
                    string="Iniciar juego"
                    class="btn-primary"
                    options="{'invisible': [('state', '!=', 'draft')]}"/>
        </header>

        <sheet>
          <group>
            <field name="name"/>
            <field name="survey_id"/>
            <field name="state"/>
            <field name="current_question_id"/>
          </group>
          <notebook>
            <page string="Participantes">
              <field name="participant_ids">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="score"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_survey_game_session_tree" model="ir.ui.view">
    <field name="name">survey.game.session.tree</field>
    <field name="model">survey.game.session</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="survey_id"/>
        <field name="state"/>
        <field name="current_question_id"/>
      </tree>
    </field>
  </record>

  <record id="action_survey_game_session" model="ir.actions.act_window">
    <field name="name">Game Sessions</field>
    <field name="res_model">survey.game.session</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_survey_game_root"
            name="Ninja Quiz"
            sequence="10"/>

  <menuitem id="menu_survey_game_session"
            name="Game Sessions"
            parent="menu_survey_game_root"
            action="action_survey_game_session"
            sequence="10"/>
</odoo>
