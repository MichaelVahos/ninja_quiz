
<odoo>
  <template id="kahoot_answer_feedback" name="Respuesta Kahoot">
    <t t-call="website.layout">
      <div class="container mt-5 text-center">
        <h1 class="mb-4">
          <t t-if="correct">
            ✅ ¡Respuesta correcta!
          </t>
          <t t-else="">
            ❌ Respuesta incorrecta
          </t>
        </h1>

        <p class="lead">
          Tu puntaje actual es: <strong><t t-esc="score"/></strong>
        </p>

        <div class="mt-4">
          <a href="/kahoot/start/<t t-esc="survey_id"/>" class="btn btn-primary btn-lg">
            Siguiente pregunta
          </a>
        </div>
      </div>
    </t>
  </template>
</odoo>
