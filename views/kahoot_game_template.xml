<odoo>
  <template id="kahoot_game_template" name="Vista del Juego Kahoot">
    <t t-call="website.layout">
      <div class="container mt-5">
        <h1 class="text-center mb-4">
          Juego: <t t-esc="survey.title"/>
        </h1>

        <t t-if="question">
          <div class="card shadow p-4 mb-4">
            <h2 class="mb-3">Pregunta:</h2>
            <p class="lead"><t t-esc="question.question"/></p>

            <div class="mt-4">
              <h4>Respuestas:</h4>
              <ul>
                <t t-foreach="question.suggested_answer_ids" t-as="answer">
                  <li><t t-esc="answer.value"/></li>
                </t>
              </ul>
            </div>
          </div>
        </t>
        <t t-else="">
          <div class="alert alert-warning text-center">
            Esta sesión aún no tiene una pregunta activa.
          </div>
        </t>

      </div>
    </t>
  </template>
</odoo>

