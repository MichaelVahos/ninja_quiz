<odoo>
  <record id="view_survey_game_answer_tree" model="ir.ui.view">
    <field name="name">survey.game.answer.tree</field>
    <field name="model">survey.game.answer</field>
    <field name="arch" type="xml">
      <tree>
        <field name="participant_id"/>
        <field name="question_id"/>
        <field name="answer_id"/>
        <field name="is_correct"/>
      </tree>
    </field>
  </record>

  <record id="view_survey_game_answer_form" model="ir.ui.view">
    <field name="name">survey.game.answer.form</field>
    <field name="model">survey.game.answer</field>
    <field name="arch" type="xml">
      <form string="Respuesta del Jugador">
        <group>
          <field name="participant_id"/>
          <field name="question_id"/>
          <field name="answer_id"/>
          <field name="is_correct"/>
        </group>
      </form>
    </field>
  </record>

  <record id="action_survey_game_answer" model="ir.actions.act_window">
    <field name="name">Respuestas del Juego</field>
    <field name="res_model">survey.game.answer</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_survey_game_answer"
            name="Respuestas"
            parent="menu_survey_game_root"
            action="action_survey_game_answer"
            sequence="30"/>
</odoo>
