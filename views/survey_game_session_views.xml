<odoo>
  <!-- Vista Tree -->
  <record id="view_survey_game_session_tree" model="ir.ui.view">
    <field name="name">survey.game.session.tree</field>
    <field name="model">survey.game.session</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="survey_id"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- Vista Form -->
  <record id="view_survey_game_session_form" model="ir.ui.view">
    <field name="name">survey.game.session.form</field>
    <field name="model">survey.game.session</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <field name="state" widget="statusbar" statusbar_visible="waiting,in_progress,finished"/>
        </header>
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="survey_id"/>
            <field name="state"/>
          </group>
          <field name="participant_ids">
            <tree editable="bottom">
              <field name="name"/>
              <field name="score"/>
            </tree>
          </field>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Acción -->
  <record id="action_survey_game_session" model="ir.actions.act_window">
    <field name="name">Game Sessions</field>
    <field name="res_model">survey.game.session</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menú -->
  <menuitem id="menu_survey_game_root" name="Quiz Game"/>
  <menuitem id="menu_survey_game_session" name="Sessions" parent="menu_survey_game_root" action="ninja_quiz.action_survey_game_session"/>
</odoo>
