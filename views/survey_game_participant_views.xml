<odoo>
  <record id="view_survey_game_participant_tree" model="ir.ui.view">
    <field name="name">survey.game.participant.tree</field>
    <field name="model">survey.game.participant</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="session_id"/>
        <field name="score"/>
        <field name="is_host"/>
      </tree>
    </field>
  </record>

  <record id="view_survey_game_participant_form" model="ir.ui.view">
    <field name="name">survey.game.participant.form</field>
    <field name="model">survey.game.participant</field>
    <field name="arch" type="xml">
      <form string="Participante del Juego">
        <group>
          <field name="name"/>
          <field name="session_id"/>
          <field name="score"/>
          <field name="is_host"/>
        </group>
      </form>
    </field>
  </record>

  <record id="action_survey_game_participant" model="ir.actions.act_window">
    <field name="name">Participantes</field>
    <field name="res_model">survey.game.participant</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_survey_game_participant"
            name="Participantes"
            parent="menu_survey_game_root"
            action="action_survey_game_participant"
            sequence="15"/>
</odoo>
